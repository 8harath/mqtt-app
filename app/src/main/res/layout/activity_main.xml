<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_emergency_logo"
                android:contentDescription="@string/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Mode Indicator and Connection Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/modeIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Publisher Mode"
                android:textColor="@color/publisher_green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/connectionStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_connection_status"
                android:contentDescription="@string/connection_status" />

        </LinearLayout>

    </LinearLayout>

    <!-- Center Section -->
    <LinearLayout
        android:id="@+id/centerSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottomSection"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <!-- Emergency Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/emergencyButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="EMERGENCY\nALERT"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="75dp"
            app:elevation="8dp"
            app:icon="@drawable/ic_emergency"
            app:iconGravity="textTop"
            app:iconSize="48dp"
            app:iconTint="@color/white"
            app:backgroundTint="@color/emergency_red" />

        <!-- Status Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tap to send emergency alert"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Settings and Profile Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Medical Profile"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/profile_button_background"
                app:icon="@drawable/ic_profile"
                app:iconGravity="textStart" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text=""
                app:cornerRadius="24dp"
                app:backgroundTint="@color/settings_button_background"
                app:icon="@drawable/ic_settings"
                app:iconSize="24dp"
                app:iconTint="@color/white" />

        </LinearLayout>

        <!-- Mode Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Connected to MQTT Broker"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 