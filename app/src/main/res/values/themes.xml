<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MQTT_APP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/emergency_red</item>
        <item name="colorSecondaryVariant">@color/emergency_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/primary_blue</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Emergency theme for emergency active screen -->
    <style name="Theme.MQTT_APP.Emergency" parent="Theme.MQTT_APP">
        <item name="android:statusBarColor">@color/emergency_red</item>
        <item name="android:navigationBarColor">@color/emergency_red</item>
        <item name="android:windowBackground">@color/emergency_red</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Material Design 3 theme overrides -->
    <style name="Theme.MQTT_APP.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_blue</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/emergency_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/emergency_red</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorTertiary">@color/success_green</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/success_green</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <item name="colorError">@color/emergency_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/emergency_red</item>
        <item name="colorOnErrorContainer">@color/white</item>
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_gray</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutline">@color/text_secondary</item>
        <item name="colorOutlineVariant">@color/text_secondary</item>
        <item name="colorScrim">@color/black</item>
        <item name="colorInverseSurface">@color/text_primary</item>
        <item name="colorInverseOnSurface">@color/background_white</item>
        <item name="colorInversePrimary">@color/primary_blue</item>
        <item name="colorShadow">@color/black</item>
        <item name="colorSurfaceTint">@color/primary_blue</item>
        <item name="colorOutlineVariant">@color/text_secondary</item>
        <item name="colorScrim">@color/black</item>
        <item name="colorInverseSurface">@color/text_primary</item>
        <item name="colorInverseOnSurface">@color/background_white</item>
        <item name="colorInversePrimary">@color/primary_blue</item>
        <item name="colorShadow">@color/black</item>
        <item name="colorSurfaceTint">@color/primary_blue</item>
    </style>
</resources>